{
  "name": "claude-good-hooks-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "build:docs": "cd packages/landing-page && pnpm run build:docs",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test --coverage",
    "test:smoke": "pnpm --filter claude-good-hooks-smoke-tests run smoke",
    "test:smoke:docker": "pnpm --filter claude-good-hooks-smoke-tests run docker:test",
    "test:smoke:docker:watch": "pnpm --filter claude-good-hooks-smoke-tests run docker:test:watch",
    "test:smoke:docker:build": "pnpm --filter claude-good-hooks-smoke-tests run docker:build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "dev:docs": "cd packages/landing-page && pnpm run dev",
    "release": "tsx .github/scripts/release.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "commander": "^14.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.12.4"
}
