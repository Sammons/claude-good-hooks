{
  "name": "claude-good-hooks-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:docs": "turbo build:docs",
    "build:api-docs": "typedoc",
    "docs:validate": "tsx .github/scripts/validate-docs.ts",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:smoke": "turbo test:smoke",
    "test:smoke:docker": "turbo test:smoke:docker",
    "test:smoke:docker:watch": "pnpm --filter claude-good-hooks-smoke-tests run docker:test:watch",
    "test:smoke:docker:build": "pnpm --filter claude-good-hooks-smoke-tests run docker:build",
    "test:hooks": "pnpm --filter @sammons/claude-good-hooks-testing run test",
    "test:examples": "pnpm --filter @sammons/claude-good-hooks-examples run test:examples",
    "lint": "turbo lint",
    "format": "turbo format",
    "check-format": "turbo check-format",
    "dev": "turbo dev --parallel",
    "dev:cli": "pnpm --filter @sammons/claude-good-hooks run dev",
    "dev:docs": "turbo dev:docs",
    "dev:builder": "pnpm --filter @sammons/claude-good-hooks-builder run dev",
    "clean": "turbo clean && rm -rf node_modules",
    "clean:turbo": "rm -rf .turbo",
    "clean:build": "pnpm -r exec rm -rf dist",
    "validate:deps": "tsx .github/scripts/validate-dependencies.ts",
    "validate:examples": "pnpm --filter @sammons/claude-good-hooks-examples run validate:examples",
    "validate:guides": "pnpm --filter @sammons/claude-good-hooks-migration run validate:guides",
    "workspace:sync": "tsx .github/scripts/workspace-dependency-sync.ts",
    "workspace:sync:fix": "tsx .github/scripts/workspace-dependency-sync.ts --fix",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status",
    "release": "tsx .github/scripts/release.ts",
    "release:changeset": "pnpm changeset:version && pnpm build && pnpm changeset:publish",
    "release:canary": "git checkout -b canary && git push origin canary",
    "changelog": "tsx .github/scripts/changelog-generator.ts",
    "changelog:preview": "tsx .github/scripts/changelog-generator.ts --dry-run",
    "version:bump": "tsx .github/scripts/version-manager.ts bump",
    "version:preview": "tsx .github/scripts/version-manager.ts preview",
    "version:sync": "tsx .github/scripts/version-manager.ts sync",
    "version:validate": "tsx .github/scripts/version-manager.ts validate",
    "breaking-changes": "tsx .github/scripts/breaking-change-detector.ts detect",
    "breaking-changes:validate": "tsx .github/scripts/breaking-change-detector.ts validate",
    "migration-guide": "tsx .github/scripts/breaking-change-detector.ts migration",
    "setup": "tsx .github/scripts/dev-setup.ts",
    "setup:dev": "tsx .github/scripts/dev-setup.ts --dev",
    "setup:quick": "tsx .github/scripts/dev-setup.ts --skip-tests --dev",
    "migrate": "pnpm --filter @sammons/claude-good-hooks-migration run cli",
    "build-hooks": "pnpm --filter @sammons/claude-good-hooks-builder run web",
    "examples:list": "pnpm --filter @sammons/claude-good-hooks-examples run generate:example --list",
    "examples:apply": "pnpm --filter @sammons/claude-good-hooks-examples run generate:example",
    "performance:test": "tsx .github/scripts/run-performance-tests.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.0.0",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "commander": "^14.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typedoc": "^0.28.12",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.12.4"
}
