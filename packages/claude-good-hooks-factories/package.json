    "typescript": ">=5.0.0"
  },
  "dependencies": {
    "@sammons/claude-good-hooks-types": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
