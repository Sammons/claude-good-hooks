{
  "name": "@sammons/claude-good-hooks-examples",
  "version": "1.0.0",
  "description": "Real-world examples and templates for Claude Good Hooks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "examples",
    "templates"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --tsconfig tsconfig.build.json",
    "test": "vitest run",
    "test:examples": "pnpm run test --testPathPattern=examples",
    "generate:example": "node scripts/generate-example.js",
    "validate:examples": "node scripts/validate-examples.js"
  },
  "keywords": [
    "claude",
    "hooks",
    "examples",
    "templates",
    "workflows"
  ],
  "author": "Sammons Software LLC",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@sammons/claude-good-hooks-types": "workspace:*",
    "commander": "^14.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mustache": "^4.2.5",
    "@types/node": "^24.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sammons/claude-good-hooks.git",
    "directory": "packages/claude-good-hooks-examples"
  }
