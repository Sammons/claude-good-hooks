{
  "name": "@sammons/claude-good-hooks-builder",
  "version": "1.0.0",
  "description": "Interactive web-based hook builder for Claude Good Hooks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "templates",
    "public"
  ],
  "bin": {
    "claude-hooks-builder": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm,cjs --dts --clean --tsconfig tsconfig.build.json",
    "build:web": "vite build",
    "dev": "vite",
    "preview": "vite preview",
    "test": "vitest run",
    "serve": "node dist/server.js"
  },
  "keywords": [
    "claude",
    "hooks",
    "builder",
    "interactive",
    "web",
    "generator"
  ],
  "author": "Sammons Software LLC",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@sammons/claude-good-hooks-types": "workspace:*",
    "@sammons/claude-good-hooks-examples": "workspace:*",
    "commander": "^14.0.0",
    "express": "^4.21.0",
    "fs-extra": "^11.2.0",
    "mustache": "^4.2.0",
    "open": "^10.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/mustache": "^4.2.5",
    "@types/node": "^24.0.0",
    "@types/ws": "^8.5.12",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sammons/claude-good-hooks.git",
    "directory": "packages/claude-good-hooks-builder"
  }
}