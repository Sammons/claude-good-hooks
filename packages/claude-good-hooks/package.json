{
  "name": "@sammons/claude-good-hooks",
  "version": "1.0.0",
  "description": "CLI for managing Claude Code hooks",
  "bin": {
    "claude-good-hooks": "./dist/index.mjs"
  },
  "main": "dist/lib.mjs",
  "types": "dist/lib.d.mts",
  "exports": {
    ".": {
      "import": "./dist/lib.mjs",
      "types": "./dist/lib.d.mts"
    },
    "./lib": {
      "import": "./dist/lib.mjs",
      "types": "./dist/lib.d.mts"
    },
    "./cli": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/lib.ts --format esm --dts --clean --shims --tsconfig tsconfig.build.json",
    "test": "vitest run",
    "test:smoke": "vitest run src/tests/smoke",
    "test:watch": "vitest",
    "dev": "tsup src/index.ts --format esm --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "claude",
    "hooks",
    "cli"
  ],
  "author": "Sammons Software LLC",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^5.3.0",
    "express": "^5.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
