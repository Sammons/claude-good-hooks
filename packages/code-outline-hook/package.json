{
  "name": "@sammons/code-outline-hook",
  "version": "2.0.0",
  "description": "Code outline hook for Claude Code using code-outline-cli",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --tsconfig tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "claude",
    "hooks",
    "code-outline",
    "ast",
    "typescript",
    "javascript"
  ],
  "author": "Sammons Software LLC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sammons2/claude-good-hooks"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "dependencies": {
    "@sammons/claude-good-hooks": "workspace:*",
    "@sammons/code-outline-cli": "^2.0.3"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
