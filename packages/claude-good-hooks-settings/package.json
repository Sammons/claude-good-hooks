{
  "name": "@sammons/claude-good-hooks-settings",
  "version": "0.1.0",
  "description": "Settings management utilities for Claude Good Hooks",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "schemas/**/*"
  ],
  "keywords": [
    "claude",
    "hooks",
    "settings",
    "configuration",
    "validation",
    "migration"
  ],
  "author": "Benjamin Sammons",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sammons/claude-good-hooks.git",
    "directory": "packages/claude-good-hooks-settings"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest"
  },
  "dependencies": {
    "@sammons/claude-good-hooks-types": "workspace:*",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}