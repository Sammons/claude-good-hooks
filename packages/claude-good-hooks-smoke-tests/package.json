{
  "name": "claude-good-hooks-smoke-tests",
  "version": "1.0.0",
  "private": true,
  "description": "End-to-end smoke tests for the Claude Good Hooks CLI",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit",
    "test": "./docker-test.sh test",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test:watch": "./docker-test.sh test:watch",
    "smoke": "./docker-test.sh test",
    "_vitest:direct": "vitest run",
    "_vitest:watch": "vitest",
    "_vitest:verbose": "vitest run --reporter=verbose",
    "_smoke:internal": "vitest run --reporter=verbose",
    "docker:setup": "./docker-test.sh setup",
    "docker:build": "./docker-test.sh build",
    "docker:start": "./docker-test.sh start",
    "docker:stop": "./docker-test.sh stop",
    "docker:test": "./docker-test.sh test",
    "docker:test:watch": "./docker-test.sh test:watch",
    "docker:test:file": "./docker-test.sh test:file",
    "docker:shell": "./docker-test.sh shell",
    "docker:status": "./docker-test.sh status",
    "docker:cleanup": "./docker-test.sh cleanup",
    "docker:logs": "./docker-test.sh logs"
  },
  "keywords": [
    "claude",
    "hooks",
    "cli",
    "testing",
    "smoke-tests"
  ],
  "author": "Sammons Software LLC",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@sammons/claude-good-hooks-types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}