{
  "name": "claude-good-hooks-smoke-tests",
  "version": "1.0.0",
  "private": true,
  "description": "End-to-end smoke tests for the Claude Good Hooks CLI",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "smoke": "vitest run --reporter=verbose",
    "docker:build": "docker-compose build smoke-tests",
    "docker:test": "docker-compose run --rm smoke-tests",
    "docker:test:watch": "docker-compose run --rm smoke-tests-dev",
    "docker:build:check": "docker-compose run --rm smoke-tests-build",
    "docker:clean": "docker-compose down && docker system prune -f"
  },
  "keywords": [
    "claude",
    "hooks",
    "cli",
    "testing",
    "smoke-tests"
  ],
  "author": "Sammons Software LLC",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@sammons/claude-good-hooks-types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}